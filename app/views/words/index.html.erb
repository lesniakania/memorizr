<%= render :partial => 'filter' %>

<div class="box" id="words-index-box">
  <h1>My words</h1>
  <% if @words.empty? %>
    <div class="notice">No results found.</div>
  <% else %>
    <ul class="custom" id="my-words">
      <% @words.each do |word| %>
        <li id="word-<%= word.id %>">
          <dl>
            <dt>
              <%= word.value %>
            </dt>
            <%= link_to 'delete', word_path(word), :class => 'delete-word-link' %>
            <dd>
              <ol>
                <% word.meanings_to(@to).each do |meaning|  %>
                  <li><%= meaning.value %></li>
                <% end %>
              </ol>
            </dd>
          </dl>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>